                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "key_code": "left_control"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "non_us_backslash"
                    },
                    "to": [
