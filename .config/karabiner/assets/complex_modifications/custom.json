{
    "title": "Custom modifications",
    "rules": [
        {
            "description": "Bring up iTerm2 (ยง) from within VirtualBox",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f20"
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        },
                        {
                            "key_code": "f20"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Caps lock to control, ยง <-> right alt swap",
