{
    "title": "Custom modifications",
    "rules": [
        {
            "description": "Bring up iTerm2 (ยง) from within VirtualBox",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f20"
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        },
                        {
                            "key_code": "f20"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Caps lock to control, ยง <-> right alt swap (if pressed on own)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "key_code": "left_control"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "non_us_backslash"
                    },
                    "to": [
                        {
                            "key_code": "f20"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_option"
                    },
                    "to": [
                        {
                            "key_code": "right_option"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "non_us_backslash"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Emoji finger pointers",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        { "key_code": "f17" },
                        { "key_code": "2", "modifiers": ["left_option"] },
                        { "key_code": "6", "modifiers": ["left_option"] },
                        { "key_code": "1", "modifiers": ["left_option"] },
                        { "key_code": "c", "modifiers": ["left_option"] },
                        { "key_code": "f17" }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        { "key_code": "f17" },
                        { "key_code": "2", "modifiers": ["left_option"] },
                        { "key_code": "6", "modifiers": ["left_option"] },
                        { "key_code": "1", "modifiers": ["left_option"] },
                        { "key_code": "f", "modifiers": ["left_option"] },
                        { "key_code": "f17" }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        { "key_code": "f17" },
                        { "key_code": "2", "modifiers": ["left_option"] },
                        { "key_code": "6", "modifiers": ["left_option"] },
                        { "key_code": "1", "modifiers": ["left_option"] },
                        { "key_code": "d", "modifiers": ["left_option"] },
                        { "key_code": "f17" }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        { "key_code": "f17" },
                        { "key_code": "2", "modifiers": ["left_option"] },
                        { "key_code": "6", "modifiers": ["left_option"] },
                        { "key_code": "1", "modifiers": ["left_option"] },
                        { "key_code": "e", "modifiers": ["left_option"] },
                        { "key_code": "f17" }
                    ]
                }
            ]
        }
    ]
}
